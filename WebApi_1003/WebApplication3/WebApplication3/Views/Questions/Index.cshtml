@model IEnumerable<WebApplication3.Data.Question>

@{
    ViewData["Title"] = "Index";
}

<h1>題目列表</h1>
<h5>題組:@(ViewBag.QuestionType.Group.Name)</h5>
<h5>題型:@(ViewBag.QuestionType.Title)</h5>
<h5>題型說明:@(ViewBag.QuestionType.Description)</h5>
<p>
    <a asp-action="Create" asp-route-questionTypeId="@ViewBag.QuestionType.Id">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Seq)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Seq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-questionTypeId="@item.QuestionType.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" asp-route-questionTypeId="@item.QuestionType.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="QuestionTypes">Back to List</a>
</div>